<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label>Title</label>
            <input  type="text" class="form-control" name="postTitle" required autofocus>
            <label>Post</label><span class="limit"> &nbsp;&nbsp;(700 chararcters)</span>
            <textarea id="inputText" class="form-control" rows="5" name="postBody" required></textarea>
        </div>
        <button type="submit" id="publish" class="btn btn-primary" name="button">Publish</button>
    </form>
    <%- include("partials/footer"); -%>